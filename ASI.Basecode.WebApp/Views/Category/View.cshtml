@model IEnumerable<ASI.Basecode.Data.Models.Expense>

<div class="container-fluid" style="padding: 1rem">
    <h3>Expenses for Category: @ViewBag.CategoryName</h3>

    @if (Model == null || !Model.Any())
    {
        <h4 class="font-weight-bold">No Expenses Available</h4>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Title</td>
                        <td>₱@expense.Amount</td>
                        <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                        <td>@(expense.Category != null ? expense.Category.CategoryName : "No Category")</td>
                        <td>@expense.Description</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <h5>Total Amount: ₱@Model.Sum(expense => expense.Amount)</h5>
        </div>
    }

    <!-- Back Button -->
    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary mt-3">Back</a>
</div>